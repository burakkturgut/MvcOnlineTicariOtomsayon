@using MvcOnlineTicariOtomsayon.Models.Siniflar
@model  List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Fatura Detay Sayfası</h2>
<br />
<div style="background-color:darkgrey">

</div>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Brim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var x in Model)
    {

        <tr>
            <td>@x.FaturaKalemID</td>
            <td>@x.Aciklama</td>
            <td>@x.Miktar</td>
            <td>@x.BirimFiyat</td>
            <td>@x.Tutar</td>
        </tr>
    }
</table>
<a href="/Fatura/YeniKalem/" class="btn tbn-default" style="background-color:darksalmon">Yeni Kalem Girişi</a>
